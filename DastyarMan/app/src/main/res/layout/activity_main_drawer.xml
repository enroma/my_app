<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:id="@+id/drawer"
    tools:context=".Main_Drawer">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top|center"
        android:orientation="vertical">
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/RedColor"
            android:layout_gravity="right"
            android:gravity="right">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/imgMenu"
                android:layout_gravity="right"
                android:src="@drawable/menu_icon"/>

        </androidx.appcompat.widget.Toolbar>


        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:id="@+id/RVL_1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:background="@color/RedColor"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:id="@+id/RVL_2"/>

    </LinearLayout>

    <!-- Drawer Part -->
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:background="@color/WhiteColor"
        android:orientation="vertical"
        android:layout_gravity="right">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@drawable/nav_menu_header_bg"
            android:focusable="true"
            android:gravity="bottom|center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="110dp"
                android:gravity="center"
                android:src="@drawable/man"/>
            <TextView
                android:id="@+id/txtName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/WhiteColor"
                android:text="سلام مهدی شیرازی عزیز!"
                android:textSize="20sp"/>

        </LinearLayout>

        <!-- Profile Part -->
        <TextView
            android:id="@+id/txtProfile"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:drawableRight="@drawable/profile_edit_icon"
            android:text="تغییر اطلاعات کاربری"
            android:textSize="25sp"
            android:layout_gravity="right"
            android:gravity="right"/>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/RedColor"/>

        <!-- SMS Part -->
            <TextView
                android:id="@+id/txtSMS"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:drawableRight="@drawable/sms_icon"
                android:text="ارسال پیامک"
                android:textSize="25sp"
                android:layout_gravity="right"
                android:gravity="right"/>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/RedColor"/>

        <!-- Call Part -->
            <TextView
                android:id="@+id/txtCall"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:drawableRight="@drawable/call_icon"
                android:text="تماس"
                android:textSize="25sp"
                android:layout_gravity="right"
                android:gravity="right"/>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/RedColor"/>

        <!-- Camera Part -->
            <TextView
                android:id="@+id/txtCamera"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:drawableRight="@drawable/camera_icon"
                android:text="دوربین"
                android:textSize="25sp"
                android:layout_gravity="right"
                android:gravity="right"/>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/RedColor"/>

    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>
<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ir.isiran.dastyarman">

    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DastyarMan">
        <activity android:name=".http_url_connection"></activity>
        <activity android:name=".ShowProfile" />
        <activity android:name=".Detail" />
        <activity android:name=".Main_Drawer">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Camera" />
        <activity android:name=".SMS" />
        <activity android:name=".Call" />
        <activity android:name=".Profile" />
        <activity android:name=".MainActivity" />
    </application>

</manifest>